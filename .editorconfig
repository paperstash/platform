root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{txt,md}]
trim_trailing_whitespace = false

[*.{ex,exs}]
indent_style = space
indent_size = 2

[*.{html,vue}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{js,coffee,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
